#!/bin/sh

# echo
# echo "\tIn this project we do not use push because of automatic version control."
# echo "\tTake a look at the README on how to push and publish you work."
# echo

# exit 1


# Check for uncommitted changes
if ! git diff-index --quiet HEAD --; then
  echo "You have uncommitted changes. Please commit or stash them before pushing."
  exit 1  # Exit with failure code to block the push
fi

# Ask for confirmation
echo "You are about to push changes. Are you sure? (y/n)"
read -r response

# Check the user's response
if [ "$response" != "y" ]; then
  echo "Push aborted by user."
  exit 0  # Exit with success code to suppress Husky's failure message
fi

# Allow the push to proceed
echo "Push proceeding..."
